@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLOGRENCI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>ÖĞRENCİ ID</th>
        <th>ÖĞRENCİ ADI</th>
        <th>ÖĞRENCİ SOYAD</th>
        <th>OGRENCİ CİNSİYET</th>
        <th>OGRENCİ KULUP</th>
        <th>İŞLEMLER</th>
        
    </tr>

    <tbody>
        @foreach (var ogr in Model)
        {
        <tr>
            <td>@ogr.OGRENCIID</td>
            <td>@ogr.OGRAD</td>
            <td>@ogr.OGRSOYAD</td>
            <td>@ogr.OGRCINSIYET</td>
            <td>@ogr.TBLKULUP.KULUPAD</td>
            <td><a href="/Ogrenci/Sil/@ogr.OGRENCIID" class="btn btn-danger">Sil</a>
                <a href="/Ogrenci/OgrenciGetir/@ogr.OGRENCIID" class="btn btn-success">Güncelle</a>
            </td>

        </tr>
        }

    </tbody>


</table>

<a href="/Ogrenci/YeniOgrenci" class="btn btn-info">Yeni Öğrenci Ekle</a>

